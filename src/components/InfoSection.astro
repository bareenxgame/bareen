---
const { title, text, img, alt, isReversed } = Astro.props;
---

<div class="divider"></div>
<div class=`card ${isReversed && "reversed"}`>
  <img src={img} alt={alt} />
  <div>
    <h1>{title}</h1>
    <br>
    <p>{text}</p>
  </div>
</div>
<div class="divider"></div>

<style>
.card {
  display: flex;
  flex-direction: column;
  gap: 1rem;
  padding: 2rem;
}


  img { 
    max-width: 100%;
    height: 600px; 
  object-fit: cover; 
  }

.text-content {
  display: flex;
  flex-direction: column;
  gap: 1.5rem; 
  padding: 1rem;
}

.text-content h1 {
  font-size: 2rem;
  margin: 0;
}

.text-content p {
  font-size: 1rem;
  line-height: 2;
  margin: 0;
}
  p { 
    line-height: 1.8;
    letter-spacing: 0.5px;
  }

@media (min-width: 1024px) {
  .card {
    flex-direction: row;
    justify-content: space-between;
    gap: 3rem;
    text-align: left;
  }

  .reversed {
    flex-direction: row-reverse;
  }

  .text-content {
    padding: 2rem;
    gap: 2rem;
  }

  .text-content p {
    margin: 0;
    font-size: 1.1rem;
  }

  p { 
    line-height: 1.8;
    letter-spacing: 0.5px;
  }

  img { 
    max-width: 100%;
    height: 700px; 
  object-fit: cover; 
  }
}
</style>
