---
import Button from "../components/Button.astro";
---

<div class="grid-1-1">
  <div>
    <img src="images/hero.png" alt="logo" />
  </div>
  <div>
    <img src="images/billede2.webp" alt="hero" />
  </div>
</div>
<div class="line"></div>
<div class="flex">
  <Button text="EXPLORE EVENT" />
  <div class="vl"></div>
  <Button text="VIEW COLLECTION" />
</div>

<style>
  img {
    width: 100%;
    height: auto;
    display: block;
  }
  video {
    width: 100%;
    height: auto;
    display: block;
  }

  .vl {
    border-left: 1px solid black;
    height: 600px;
    position: absolute;
    left: 50%;
    top: 88px;
  }
  .line {
    width: 100vw;
    border: 1px solid black;
    margin-bottom: 2rem;
  }
  .flex {
    display: flex;
    justify-content: space-around;
    align-items: center;
    gap: 10px;
  }
  .grid-1-1 {
    display: grid;
    grid-template-columns: 1fr 1fr;
  }
</style>
